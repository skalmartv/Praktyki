<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@(string.IsNullOrWhiteSpace(ViewData["Title"] as string) ? "Helpdesk" : ViewData["Title"] + " - Helpdesk")</title>
    <meta name="description" content="Helpdesk – system zgłoszeń" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Helpdesk.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-semibold" asp-area="" asp-controller="Home" asp-action="Index">Helpdesk</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Przełącz nawigację">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(IsActive("Home","Index"))" asp-controller="Home" asp-action="Index" aria-current="@(IsActiveBool("Home","Index") ? "page" : null)">Strona główna</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(IsActive("Home","Privacy"))" asp-controller="Home" asp-action="Privacy">Prywatność</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link @(IsActive("Tickets","TicketIndex"))" asp-controller="Tickets" asp-action="TicketIndex">Zgłoszenia</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(IsActive("Tickets","TicketCreate"))" asp-controller="Tickets" asp-action="TicketCreate">Utwórz zgłoszenie</a>
                            </li>
                            @if (User.IsInRole("Agent") || User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(IsActive("Tickets","Dashboard"))" asp-controller="Tickets" asp-action="Dashboard">Dashboard</a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item d-flex align-items-center me-2">
                                <span class="text-muted small">@User.Identity!.Name</span>
                            </li>
                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-secondary">Wyloguj</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-sm btn-outline-primary me-2" asp-area="Identity" asp-page="/Account/Login">Zaloguj</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-sm btn-primary" asp-area="Identity" asp-page="/Account/Register">Rejestracja</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1 py-4">
        @* Globalne komunikaty TempData *@
        @if (TempData["Success"] is string sMsg)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @sMsg
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Zamknij"></button>
            </div>
        }
        @if (TempData["Error"] is string eMsg)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @eMsg
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Zamknij"></button>
            </div>
        }

        <main>
            @RenderBody()
        </main>
    </div>

    <footer class="mt-auto border-top py-3 bg-light">
        <div class="container small text-muted d-flex justify-content-between">
            <span>&copy; @(DateTime.UtcNow.Year) Helpdesk</span>
            <span>Bootstrap 5 / .NET 9</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

    @functions {
        private string? IsActive(string controller, string action) =>
            (ViewContext.RouteData.Values["controller"]?.ToString() == controller &&
             ViewContext.RouteData.Values["action"]?.ToString() == action)
             ? "active" : null;

        private bool IsActiveBool(string controller, string action) =>
            ViewContext.RouteData.Values["controller"]?.ToString() == controller &&
            ViewContext.RouteData.Values["action"]?.ToString() == action;
    }
</body>
</html>

