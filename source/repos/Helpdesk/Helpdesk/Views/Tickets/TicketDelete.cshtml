@model Helpdesk.Models.Ticket

@{
    ViewData["Title"] = "Usuń zgłoszenie";
}

<h2>Potwierdzenie usunięcia</h2>
<p>Czy na pewno chcesz usunąć to zgłoszenie?</p>

<dl class="row">
    <dt class="col-sm-2">Tytuł</dt>
    <dd class="col-sm-10">@Model.Title</dd>
    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.Status</dd>
    <dt class="col-sm-2">Priorytet</dt>
    <dd class="col-sm-10">@Model.Priority</dd>
</dl>

<form asp-action="TicketDelete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Usuń</button>
    <a asp-action="TicketIndex" class="btn btn-secondary">Anuluj</a>
</form>
