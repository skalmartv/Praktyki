@model IEnumerable<Helpdesk.Models.Ticket>

@{
    ViewData["Title"] = "Moje tickety";
    var currentUserId = ViewBag.CurrentUserId as string;
}

<h2>@ViewData["Title"]</h2>

<p>
    <a class="btn btn-primary" asp-controller="Tickets" asp-action="TicketCreate">Utwórz nowy ticket</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tytuł</th>
            <th>Data utworzenia</th>
            <th>Status</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.Title</td>
                <td>@ticket.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                <td>@ticket.Status</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-controller="Tickets" asp-action="TicketDetails" asp-route-id="@ticket.Id">Szczegóły</a>
                    @if (ticket.UserId == currentUserId)
                    {
                        <a class="btn btn-warning btn-sm" asp-controller="Tickets" asp-action="TicketEdit" asp-route-id="@ticket.Id">Edytuj</a>
                    }
                    <a class="btn btn-danger btn-sm" asp-controller="Tickets" asp-action="TicketDelete" asp-route-id="@ticket.Id">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
