@model IEnumerable<Helpdesk.Models.Ticket>

@{
    ViewData["Title"] = "Moje zgłoszenia";
    var currentUserId = ViewBag.CurrentUserId as string;
    var statuses = ViewBag.Statuses as string[] ?? Array.Empty<string>();
    var priorities = ViewBag.Priorities as string[] ?? Array.Empty<string>();
    string currentSearch = ViewBag.FilterSearch as string;
    string currentStatus = ViewBag.FilterStatus as string;
    string currentPriority = ViewBag.FilterPriority as string;
    string currentSort = ViewBag.Sort as string ?? "desc";
}

<h2>@ViewData["Title"]</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-3">
        <input type="text" name="search" value="@currentSearch" class="form-control" placeholder="Szukaj w tytule / opisie" />
    </div>
    <div class="col-md-2">
        <select name="status" class="form-select">
            <option value="">-- Status --</option>
            @foreach (var s in statuses)
            {
                <option value="@s" selected="@(s == currentStatus)">@s</option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <select name="priority" class="form-select">
            <option value="">-- Priorytet --</option>
            @foreach (var p in priorities)
            {
                <option value="@p" selected="@(p == currentPriority)">@p</option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <select name="sort" class="form-select">
            <option value="desc" selected="@(currentSort=="desc")">Najnowsze</option>
            <option value="asc" selected="@(currentSort=="asc")">Najstarsze</option>
        </select>
    </div>
    <div class="col-md-3 d-flex">
        <button type="submit" class="btn btn-primary me-2">Filtruj</button>
        <a asp-action="TicketIndex" class="btn btn-secondary">Wyczyść</a>
    </div>
</form>

<p>
    <a class="btn btn-success" asp-controller="Tickets" asp-action="TicketCreate">Utwórz nowe zgłoszenie</a>
</p>

<table class="table table-striped table-sm align-middle">
    <thead>
        <tr>
            <th>Tytuł</th>
            <th>Status</th>
            <th>Priorytet</th>
            <th>Przypisany</th>
            <th>Data utworzenia</th>
            <th style="width:160px;">Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.Title</td>
                <td>@ticket.Status</td>
                <td>@ticket.Priority</td>
                <td>
                    @(ticket.AssignedTo == null 
                        ? "—" 
                        : (ticket.AssignedTo.UserName ?? ticket.AssignedTo.Email ?? ticket.AssignedToId))
                </td>
                <td>@ticket.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="TicketDetails" asp-route-id="@ticket.Id">Szczegóły</a>
                    @* Usunięto przycisk Edytuj dla wszystkich *@
                    @* Usuwanie tylko dla Agent/Admin – sprawdzamy role z kontekstu użytkownika *@
                    @if (User.IsInRole("Agent") || User.IsInRole("Admin"))
                    {
                        <a class="btn btn-danger btn-sm" asp-action="TicketDelete" asp-route-id="@ticket.Id">Usuń</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
