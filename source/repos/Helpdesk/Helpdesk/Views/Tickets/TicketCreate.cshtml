@model Helpdesk.Models.Ticket

@{
    ViewData["Title"] = "Utwórz nowe zgłoszenie";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Tickets" asp-action="TicketCreate" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label" for="Title">Tytuł</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" for="Description">Opis</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Priorytet</label>
        <select asp-for="Priority" class="form-select">
            <option value="Niski">Niski</option>
            <option value="Normalny" selected>Normalny</option>
            <option value="Wysoki">Wysoki</option>
            <option value="Krytyczny">Krytyczny</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Zapisz</button>
    <a asp-controller="Tickets" asp-action="TicketIndex" class="btn btn-secondary">Anuluj</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
